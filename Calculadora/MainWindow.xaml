<Window
    x:Class="Calculadora.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculadora"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="338"
    Height="490"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="1" Margin="2" Name="porciento" Click="tantoporciento">%</Button>
        <Button Grid.Column="1" Grid.Row="1"  Margin="2" Name="eliminar1" Click="ceros1">CE</Button>
        <Button Grid.Column="2"  Grid.Row="1" Margin="2" Name="eliminar" Click="ceros2">C</Button>
        <Button Grid.Column="3"  Grid.Row="1" Margin="2" Name="funcion" Click="funciones">1/x</Button>


        <Button Grid.Column="0" Grid.Row="2" Margin="2" Name="potencia" Click="potenci">x²</Button>
        <Button Grid.Column="1" Grid.Row="2" Margin="2" Name="raiz_cuadrada" Click="raiz">√</Button>
        <Button Grid.Column="2" Grid.Row="2" Margin="2" x:Name="atras" Click="atra">←</Button>
        <Button Grid.Column="3" Grid.Row="2" Margin="2" Name="dividir" Click="dividi">/</Button>

        <Button Grid.Column="0" Grid.Row="3" Margin="2" Name="siete" Click="sietes">7</Button>
        <Button Grid.Column="1" Grid.Row="3" Margin="2" Name="ocho" Click="ochos">8</Button>
        <Button Grid.Column="2" Grid.Row="3" Margin="2" Name="nueve" Click="nueves">9</Button>
        <Button Grid.Column="3" Grid.Row="3" Margin="2" Name="sumar" Click="mas">+</Button>

        <Button Grid.Column="0" Grid.Row="4" Margin="2" Name="seis" Click="sei">6</Button>
        <Button Grid.Column="1" Grid.Row="4" Margin="2" Name="cinco" Click="cinc">5</Button>
        <Button Grid.Column="2" Grid.Row="4" Margin="2" Name="cuatro" Click="cuatr">4</Button>
        <Button Grid.Column="3" Grid.Row="4" Margin="2" Name="restar" Click="menos">-</Button>

        <Button Grid.Column="0" Grid.Row="5" Margin="2" Name="uno" Click="un">1</Button>
        <Button Grid.Column="1" Grid.Row="5" Margin="2" Name="dos" Click="doss">2</Button>
        <Button Grid.Column="2" Grid.Row="5" Margin="2" Name="tres" Click="tre">3</Button>
        <Button Grid.Column="3" Grid.Row="5" Margin="2" Name="multiplicar" Click="multipli">*</Button>

        <Button Grid.Column="0" Grid.Row="6" Margin="2" Name="numeroentero" Click="positivosnegativos">+/-</Button>
        <Button Grid.Column="1" Grid.Row="6" Margin="2" Name="cero" Click="ceros">0</Button>
        <Button Grid.Column="2" Grid.Row="6" Margin="2" Name="coma" Click="puntos">.</Button>
        <Button Grid.Column="3" Grid.Row="6" Margin="2" Name="igual" Click="resultadoss">=</Button>

        <TextBox x:Name="pantalla" Grid.Row="0" Grid.ColumnSpan="4" AcceptsReturn="True" TextWrapping="Wrap" PreviewTextInput="condicion" TextAlignment="Right" VerticalContentAlignment="Bottom" FontSize="15"/>
    </Grid>
</Window> 